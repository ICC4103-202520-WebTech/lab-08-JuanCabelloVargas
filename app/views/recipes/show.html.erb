<div class="container mt-3 mb-3">
  <h1 class="mb-3 text-primary"><%= @recipe.title %></h1>
  <p>
    <strong>Difficulty:</strong> <%= @recipe.difficulty %><br>
    <strong>Cook time:</strong> <%= @recipe.cook_time %> min
  </p>

  <hr>

  <h4>Procedure</h4>
  <div class="mt-3">
    <%= @recipe.content %>
  </div>

  <hr class="my-4">

  <div class="d-flex gap-2">
    <%= link_to "Edit recipe", edit_recipe_path(@recipe), class: "btn btn-outline-secondary" %>
    <%= link_to "Back to recipes", recipes_path, class: "btn btn-primary btn-otuline-primary" %>
    
  </div>
</div>
