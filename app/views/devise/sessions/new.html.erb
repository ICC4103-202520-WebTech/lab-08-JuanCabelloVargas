  <% # from https://getbootstrap.com/docs/4.1/components/forms/ %>
  <div class="container">
  <h2>Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group mb-3">
      <%= f.label :email, "Email address", for: "exampleInputEmail1", class: "form-label" %>
      <%= f.email_field :email,
            autofocus: true,
            autocomplete: "email",
            class: "form-control",
            id: "exampleInputEmail1",
            aria: { describedby: "emailHelp" },
            placeholder: "Enter email" %>
      <small id="emailHelp" class="form-text text-muted">
        We'll never share your email with anyone else.
      </small>
    </div>

    <div class="form-group mb-3">
      <%= f.label :password, "Password", for: "exampleInputPassword1", class: "form-label" %>
      <%= f.password_field :password,
            autocomplete: "current-password",
            class: "form-control",
            id: "exampleInputPassword1",
            placeholder: "Password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group form-check mb-3">
        <%= f.check_box :remember_me, class: "form-check-input", id: "exampleCheck1" %>
        <%= f.label :remember_me, "Check me out", class: "form-check-label", for: "exampleCheck1" %>
      </div>
    <% end %>

    <button type="submit" class="btn btn-primary">Submit</button>
  <% end %>

  <div class="mt-3">
    <%= render "devise/shared/links" %>
  </div>
    
</div>
